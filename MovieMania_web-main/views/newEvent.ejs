<%- include("partials/header") %>
<div class="ui container grid">
  <div class="ui five wide column"></div>
  <div class="ui six wide column segment">
    <h1>Add your Event</h1>
    <form class="ui form" action="/Event" method="POST">
      <div class="field">
        <label>Event Name</label>
        <input type="text" name="eventName" placeholder="Enter Event Name">
      </div>
      <div class="field">
        <label>Poster URL</label>
        <input type="text" name="poster" placeholder="Enter Event Poster URL Here">
      </div>
      <div class="field">
        <label>Event Date</label>
        <input type="date" name="date">
      </div>
      <div class="field">
        <label>Event Description</label>
        <textarea rows="10" cols="10" name="description" placeholder="About your Event"></textarea>
      </div>
      <div class="field">
        <div class="ui checkbox">
          <input type="checkbox" tabindex="0" checked=true class="hidden">
          <label>I agree to the Terms and Conditions</label>
        </div>
      </div>
      <button class="ui button" type="submit">Submit</button>
    </form>
  </div>
  <div class="ui five wide column"></div>
</div>
<%- include("partials/footer") %>